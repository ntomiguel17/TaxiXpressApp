<%= simple_form_for @car, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :code %>
  <%= error_span(@car[:code]) %>
  <%= f.input :brand %>
  <%= error_span(@car[:brand]) %>
  <%= f.input :seats %>
  <%= error_span(@car[:seats]) %>
  <%= f.input :model %>
  <%= error_span(@car[:model]) %>
  <%= f.association :category %> 
  <%= error_span(@car[:category]) %>
  <%= f.input :description %>
  <%= error_span(@car[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cars_path, :class => 'btn btn-default' %>
<% end %>
