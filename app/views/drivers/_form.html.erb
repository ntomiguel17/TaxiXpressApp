<%= simple_form_for @driver, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@driver[:name]) %>
  <%= f.input :license %>
  <%= error_span(@driver[:license]) %>
  <%= f.input :car_id %>
  <%= error_span(@driver[:car_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                drivers_path, :class => 'btn btn-default' %>
<% end %>
